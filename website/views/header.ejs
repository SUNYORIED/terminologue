<div id="header" style="padding: 10px 10px; height: 38px; border-bottom: 1px solid var(--border);">
  <a href="<%-rootPath%><%=termbaseID%>/" class="dicTitle"><span class="bigscreen"><%=termbaseConfigs.ident.title[uilang] || termbaseConfigs.ident.title.$%></span><span class="smallscreen"><%=(termbaseConfigs.ident.title[uilang] || termbaseConfigs.ident.title.$).substring(0, 1)%></span></a>

  <span class="dicLinks">

    <a href="<%-rootPath%><%=termbaseID%>/edit/" class="dicLink <%if(sectionID=='edit'){%>current<%}%> <%if(user.level<1 && !user.isAdmin){%>disabled<%}%>"><span class="bigscreen"><%=L("Editing")%></span><span class="smallscreen"><%=L("Editing").substring(0, 1)%></span></a>

    <a href="<%-rootPath%><%=termbaseID%>/admin/" class="dicLink <%if(sectionID=='metadata'){%>current<%}%> <%if(user.level<4 && !user.isAdmin){%>disabled<%}%>"><span class="bigscreen"><%=L("Administration")%></span><span class="smallscreen"><%=L("Administration").substring(0, 1)%></span></a>
    <%if(sectionID=="metadata" && subsectionID){%>
        <%
          var subtitle=subsectionID;
          if(subsectionID=="domain") subtitle=L('Domains');
          if(subsectionID=="posLabel") subtitle=L('Part-of-speech labels');
          if(subsectionID=="inflectLabel") subtitle=L('Inflection labels');
          if(subsectionID=="acceptLabel") subtitle=L('Acceptability labels');
          if(subsectionID=="source") subtitle=L('Sources');
          if(subsectionID=="collection") subtitle=L('Collections');
          if(subsectionID=="tag") subtitle=L('Tags');
          if(subsectionID=="extranet") subtitle=L('Extranets');
        %>
        <a href="<%-rootPath%><%=termbaseID%>/admin/<%=subsectionID%>/" class="dicLink current mergeleft bigscreen"><%=subtitle%></a>
    <%}%>

    <a href="<%-rootPath%><%=termbaseID%>/config/" class="dicLink <%if(sectionID=='config'){%>current<%}%> <%if(user.level<5 && !user.isAdmin){%>disabled<%}%>"><span class="bigscreen"><%=L("Configuration")%></span><span class="smallscreen"><%=L("Configuration").substring(0, 1)%></span></a>
    <%if(sectionID=="config" && subsectionID){%>
        <%
          var subtitle=subsectionID;
          if(subsectionID=="ident") subtitle=L("Name and blurb");
          if(subsectionID=="lingo") subtitle=L("Languages");
          if(subsectionID=="abc") subtitle=L("Alphabetical order");
          if(subsectionID=="features") subtitle=L("Features");
          if(subsectionID=="users") subtitle=L("Users");
          if(subsectionID=="publico") subtitle=L("Publishing");
          if(subsectionID=="triggers") subtitle=L("Automatic changes");
          if(subsectionID=="tod") subtitle=L("Term of the day");
          if(subsectionID=="news") subtitle=L("News and announcements");
        %>
        <a href="<%-rootPath%><%=termbaseID%>/config/<%=subsectionID%>/" class="dicLink current mergeleft bigscreen"><%=subtitle%></a>
    <%}%>

  </span>

  <div class="topright">
    <div class="one ScreenfulUilang"></div>
    <div class="one ScreenfulUser"></div>
  </div>
</div>
